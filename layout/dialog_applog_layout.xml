            android:text="fdsjf sfjsjfks ksjdskjdks skjdksjdks jskdjskdj sjdksjdk djskdjskd djskjdk djskjdksd"
            android:maxLines="3"
            />
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider"/>
    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_default_size"
        android:text="@string/ok"
        style="@style/SmallTextAppearanceDark"
            android:background="@drawable/btn_transparent_selector"/>
</LinearLayout>