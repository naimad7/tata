            style="@style/SmallTextAppearanceDark"
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_default_space"
            android:paddingRight="@dimen/size_default_space"
            android:paddingTop="@dimen/size_default_space"
            android:paddingBottom="@dimen/size_default_space"
