<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/default_dialog_width"
                android:layout_height="match_parent"
        >

    <TextView
            style="@style/SmallTextAppearanceDark"
            android:id="@+id/message_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/size_default_size"
            android:text="sflkmsfldskfkjdskfdskfjdskjf sdfjkdjfdsk dkfjdkjskn skjskgdjgkd"/>


    <ImageView
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/message_text"
            android:layout_marginTop="@dimen/size_default_space"
            android:background="@drawable/divider"/>

    <Button
            android:id="@+id/button_ok"
            style="@style/TransparentButton"
            android:layout_width="@dimen/default_dialog_width"
            android:layout_height="@dimen/size_default_size"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/divider"
            android:text="@android:string/ok"/>

</RelativeLayout>