<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="92dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/packages_list_item_padding_horizontal"
                android:layout_marginRight="@dimen/packages_list_item_padding_horizontal"
                android:layout_alignParentLeft="true"
                android:background="@drawable/main_item_view_confirmed">

            <TextView
                    style="@style/MediumTextAppearanceDark"
                    android:id="@+id/client_address"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"

                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/packages_list_item_padding_horizontal"
                    android:paddingRight="@dimen/packages_list_item_padding_horizontal"
                    android:textSize="@dimen/size_text_large"
                    android:text="Address"/>

            <TextView
                    style="@style/SmallTextAppearanceDark"
                    android:id="@+id/client_name"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/packages_list_item_padding_horizontal"
                    android:paddingRight="@dimen/packages_list_item_padding_horizontal"

                    android:text="Client Name"/>

            <TextView
                    style="@style/SmallTextAppearanceDark"

                    android:id="@+id/client_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:paddingLeft="@dimen/packages_list_item_padding_horizontal"
                    android:paddingRight="@dimen/packages_list_item_padding_horizontal"

                    android:gravity="center_vertical"
                    android:text="CLient PhoneNumber"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>