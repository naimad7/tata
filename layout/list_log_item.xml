<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >

        <TextView
                style="@style/SmallTextAppearanceDark"
                android:id="@+id/textLogType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/size_default_space"
                android:layout_marginTop="@dimen/size_default_space"
                android:text="TextView"/>

        <TextView
                style="@style/MediumTextAppearanceDark"
                android:id="@+id/textLogMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/size_default_space"
                android:layout_centerVertical="true"
                android:text="TextView"/>

        <TextView
                style="@style/SmallTextAppearanceDark"
                android:id="@+id/textLogDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/secondary_color_dark"
                android:layout_marginLeft="@dimen/size_default_space"
                android:layout_marginBottom="@dimen/size_default_space"
                android:text="TextView"/>

    </RelativeLayout>


</RelativeLayout>