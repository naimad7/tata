<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_default_size">

        <TextView
                style="@style/TitleBarTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:id="@+id/couriers_text"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="@string/couriers"
                android:textColor="@color/blue"
                android:textSize="30sp"/>

<RelativeLayout
        android:id="@+id/choose_user_button"
        android:layout_width="@dimen/size_default_size"
        android:layout_height="@dimen/size_default_size"
        android:layout_alignParentRight="true"

        android:layout_centerVertical="true">
    <ImageView

            style="@style/TransparentButton"
            android:layout_width="36dp"
            android:layout_height="36dp"

            android:layout_centerInParent="true"
            android:src="@drawable/ic_user"/>

</RelativeLayout>

    </RelativeLayout>

    <TextView
            android:id="@+id/login_txt"
            style="@style/MediumTextAppearanceLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/size_default_size"
            android:layout_marginTop="150dp"
            android:text="@string/login"/>

    <EditText
            android:id="@+id/login_text"
            style="@style/EditTextLight"
            android:layout_width="@dimen/default_edittext_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_default_space"
            android:ems="10">

        <requestFocus/>
    </EditText>

    <TextView
            android:id="@+id/psw_txt"
            style="@style/MediumTextAppearanceLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_text"
            android:layout_marginLeft="@dimen/size_default_size"
            android:layout_marginTop="@dimen/size_default_space"
            android:hint="@string/password"
            android:text="@string/password"
            android:textColorHint="@color/blue"/>

    <EditText
            android:id="@+id/password_text"
            style="@style/EditTextLight"
            android:layout_width="@dimen/default_edittext_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/psw_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_default_space"
            android:ems="10"
            android:inputType="textPassword"/>

    <Button
            android:id="@+id/log_in_button"
            style="@style/LoginButton"
            android:layout_width="@dimen/default_edittext_width"
            android:layout_height="@dimen/size_default_size"
            android:layout_below="@+id/password_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/log_in"/>


</RelativeLayout>