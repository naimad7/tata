<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
             >
<TextView
        style="@style/MediumTextAppearanceDark"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:paddingLeft="@dimen/size_default_space"
        android:layout_marginTop="@dimen/size_default_space"
        android:textStyle="bold"
        android:text="TEXT"/>
    <TextView
            style="@style/SmallTextAppearanceDark"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:singleLine="false"
            android:paddingLeft="@dimen/size_default_space"
            android:layout_marginBottom="@dimen/size_default_space"

            android:text="TEXT2"/>

</LinearLayout>